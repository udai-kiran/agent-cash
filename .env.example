# ==============================================================================
# Database Configuration
# ==============================================================================
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=gnucash
DATABASE_PASSWORD=gnucash_password
DATABASE_NAME=gnucash
DATABASE_SSLMODE=disable

# ==============================================================================
# Backend API Configuration
# ==============================================================================
# JWT Configuration
JWT_SECRET=change-this-to-a-secure-random-string-min-32-characters

# Server Configuration
SERVER_PORT=8080

# CORS Configuration (comma-separated list of allowed origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ==============================================================================
# Frontend Configuration
# ==============================================================================
# API Base URL (used during Docker build)
REACT_APP_API_BASE_URL=http://localhost:8080/api/v1

# ==============================================================================
# MCP Server Configuration
# ==============================================================================
MCP_PORT=8081
MCP_SERVER_NAME=gnucash-mcp-server
MCP_SERVER_VERSION=1.0.0
MCP_SERVER_URL=http://mcp-server:8081
GO_ENV=production

# ==============================================================================
# Agents Service Configuration
# ==============================================================================
# Agents service host and port
AGENTS_HOST=0.0.0.0
AGENTS_PORT=8083

# OpenAI API Configuration
# OpenAI API Key (REQUIRED for agents service)
OPENAI_API_KEY=sk-your-api-key-here

# OpenAI API Base URL (optional, default: https://api.openai.com/v1)
# Use this to configure a different endpoint (e.g., Azure OpenAI, proxy, or custom endpoint)
OPENAI_API_URL=https://api.openai.com/v1

# LLM model to use (default: gpt-4)
# Options: gpt-4, gpt-4-turbo, gpt-3.5-turbo
MODEL_NAME=gpt-4

# Optional: Use Anthropic Claude instead
# Uncomment and configure for Anthropic:
# MODEL_NAME=claude-3-sonnet-20240229
# ANTHROPIC_API_KEY=your-anthropic-key-here

# ==============================================================================
# Chainlit UI Configuration
# ==============================================================================
CHAINLIT_PORT=8082
AGENTS_SERVICE_URL=http://agents:8083
