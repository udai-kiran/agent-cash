# Build stage
FROM golang:1.24-alpine AS builder

# Install build dependencies
RUN apk add --no-cache git

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build the MCP server application
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o mcp-server ./cmd/mcp-server

# Final stage
FROM alpine:latest

# Install ca-certificates for HTTPS and wget for health checks
RUN apk --no-cache add ca-certificates wget

# Create a non-root user first
RUN addgroup -S appgroup && adduser -S appuser -G appgroup

WORKDIR /home/appuser

# Copy the binary from builder
COPY --from=builder /app/mcp-server .
COPY --from=builder /app/configs ./configs

# Set ownership
RUN chown -R appuser:appgroup /home/appuser

USER appuser

# Expose MCP server port
EXPOSE 8081

# Health check - MCP server doesn't have a specific health endpoint yet
# We'll use a basic TCP check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD nc -z localhost 8081 || exit 1

# Run the MCP server
CMD ["./mcp-server"]
